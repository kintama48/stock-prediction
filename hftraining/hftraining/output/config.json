    "overlap_ratio": 0.5,
    "train_ratio": 0.7,
    "val_ratio": 0.15,
    "test_ratio": 0.15,
    "symbols": [
      "AAPL",
      "GOOGL",
      "MSFT",
      "TSLA",
      "AMZN",
      "META",
      "NVDA",
      "NFLX",
      "CRM",
      "ORCL"
